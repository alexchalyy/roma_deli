@{
    ViewData["Title"] = "Menu";
}

<div class="text-center">
    <h1 class="display-4">Italian Deli Menu</h1>
    <p>Explore our delicious Italian offerings!</p>
</div>

<div class="container">
    <div class="row">
        <!-- Menu Item 1 -->
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="/images/menu-item-1.jpg" class="card-img-top" alt="Margherita Pizza">
                <div class="card-body">
                    <h5 class="card-title">Margherita Pizza</h5>
                    <p class="card-text">Classic pizza with fresh mozzarella, tomatoes, and basil.</p>
                </div>
            </div>
        </div>

        <!-- Menu Item 2 -->
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="/images/menu-item-2.jpg" class="card-img-top" alt="Spaghetti Carbonara">
                <div class="card-body">
                    <h5 class="card-title">Spaghetti Carbonara</h5>
                    <p class="card-text">Creamy pasta with pancetta, eggs, and Parmesan cheese.</p>
                </div>
            </div>
        </div>

        <!-- Menu Item 3 -->
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="/images/menu-item-3.jpg" class="card-img-top" alt="Lasagna">
                <div class="card-body">
                    <h5 class="card-title">Lasagna</h5>
                    <p class="card-text">Layered pasta with Bolognese sauce, béchamel, and cheese.</p>
                </div>
            </div>
        </div>

        <!-- Menu Item 4 -->
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="/images/menu-item-4.jpg" class="card-img-top" alt="Tiramisu">
